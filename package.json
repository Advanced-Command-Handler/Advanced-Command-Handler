{
	"author": "Ayfri",
	"bugs": {
		"url": "https://github.com/Ayfri/Advanced-Command-Handler/issues"
	},
	"dependencies": {
		"chalk": "^4.1.0",
		"dayjs": "^1.10.4",
		"discord.js": "^12.5.1",
		"discord.js-better-embed": "^1.1.0"
	},
	"description": "A package to help you create a bot with only 1 main file, directories for your events/commands, with some helpers classes and functions.",
	"devDependencies": {
		"@types/node": "^14.14.22",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"eslint": "^7.19.0",
		"eslint-plugin-jsdoc": "^31.6.0",
		"eslint-plugin-tsdoc": "^0.2.11",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3"
	},
	"engineStrict": true,
	"engines": {
		"node": ">=14"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 2021,
			"sourceType": "module"
		},
		"rules": {
			"tsdoc/syntax": "warn",
			"require-jsdoc": "warn",
			"jsdoc/check-tag-names": "off",
			"jsdoc/require-param-type": "off",
			"jsdoc/require-returns-type": "off"
		},
		"extends": [
			"plugin:jsdoc/recommended"
		],
		"plugins": [
			"eslint-plugin-tsdoc",
			"@typescript-eslint",
			"eslint-plugin-jsdoc"
		]
	},
	"homepage": "https://github.com/Ayfri/Advanced-Command-Handler",
	"keywords": [
		"discord",
		"command-handler",
		"discord-bot",
		"discordjs"
	],
	"license": "ISC",
	"main": "./dist/index.js",
	"maintainers": [
		"ayfri"
	],
	"name": "advanced-command-handler",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"printWidth": 200,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	},
	"readme": "https://github.com/Ayfri/Advanced-Command-Handler/blob/package/README.md",
	"repository": {
		"type": "github",
		"url": "git://github.com/Ayfri/Advanced-Command-Handler/tree/package.git"
	},
	"scripts": {
		"build": "tsc",
		"lint": "eslint src/**/*.ts --fix",
		"prepare": "npm run build",
		"prettier": "prettier package.json tsconfig.json README.md src tests --write"
	},
	"types": "types/index.d.ts",
	"version": "2.4.0"
}
