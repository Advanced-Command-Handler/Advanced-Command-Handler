{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "types",
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"module": "commonjs",
		"noImplicitOverride": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020"
	},
	"ts-node": {
		"require": ["chalk", "dayjs", "discord.js", "discord.js-better-embed"]
	}
}
