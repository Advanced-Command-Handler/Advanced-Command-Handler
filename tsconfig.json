{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"newLine": "lf",
		"outDir": "./lib",
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
	},
	"ts-node": {
		"require": ["luxons", "discord.js"],
		"pretty": true,
		"preferTsExts": true
	}
}
