{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "types",
		"esModuleInterop": true,
		"lib": [
			"ESNext"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"pretty": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020"
	},
	"ts-node": {
		"require": [
			"dayjs",
			"discord.js",
			"discord.js-better-embed"
		],
		"pretty": true
	}
}
